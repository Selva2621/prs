# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files with real credentials to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database URL for Prisma (with connection pooling)
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_ID:YOUR_PASSWORD@YOUR_HOST:6543/postgres?pgbouncer=true"

# Direct database URL for migrations (without connection pooling)
DIRECT_URL="postgresql://postgres.YOUR_PROJECT_ID:YOUR_PASSWORD@YOUR_HOST:5432/postgres"

# Legacy database configuration (for compatibility)
DB_HOST=YOUR_HOST
DB_PORT=5432
DB_USERNAME=postgres.YOUR_PROJECT_ID
DB_PASSWORD=YOUR_PASSWORD
DB_NAME=postgres

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase project URL
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co

# Supabase anonymous key (safe to expose in frontend)
SUPABASE_ANON_KEY=your_anon_key_here

# Supabase service role key (keep secret, server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# Secret key for JWT token signing (use a strong, random string)
JWT_SECRET=your_jwt_secret_here

# JWT token expiration time
JWT_EXPIRES_IN=7d

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Server port
PORT=3000

# Node environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760

# Upload destination directory
UPLOAD_DEST=./uploads

# =============================================================================
# REAL-TIME CONFIGURATION
# =============================================================================

# WebSocket server port
SOCKET_PORT=3001

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# Debug mode (true/false)
DEBUG_MODE=false

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Enable Swagger documentation (true/false)
ENABLE_SWAGGER=true

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3000

# Rate limiting configuration
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# =============================================================================
# DEVELOPMENT-ONLY CONFIGURATIONS
# =============================================================================

# Enable hot reload in development
ENABLE_HOT_RELOAD=true

# Enable Prisma Studio
ENABLE_PRISMA_STUDIO=true

# Enable debug routes
ENABLE_DEBUG_ROUTES=false

# =============================================================================
# PRODUCTION-ONLY CONFIGURATIONS
# =============================================================================

# SSL/TLS configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Session configuration
SESSION_SECRET=your_session_secret_here

# Redis configuration (if using Redis for caching/sessions)
REDIS_URL=redis://localhost:6379

# Email configuration (if using email services)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics tracking ID
GA_TRACKING_ID=UA-XXXXXXXXX-X

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# AWS S3 configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Cloudinary configuration (if using Cloudinary for image processing)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
