{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../dist/api",
        "rootDir": ".",
        "module": "commonjs",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}